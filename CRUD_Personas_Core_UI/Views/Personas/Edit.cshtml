@model CRUD_Personas_Core_UI.Models.ViewModels.ClsPersonaListadoDepartamentosNombreDepartamentoVM

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

    <h4>ClsPersonaListadoDepartamentosVM</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Id" class="control-label"></label>
                    @Html.HiddenFor(model => model.Id)
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Nombre" class="control-label"></label>
                    @Html.TextBoxFor(model => model.Nombre)
                    @Html.ValidationMessageFor(model => model.Nombre)
                </div>
                <div class="form-group">
                    <label asp-for="Apellidos" class="control-label"></label>
                    @Html.TextBoxFor(model => model.Apellidos)
                    @Html.ValidationMessageFor(model => model.Apellidos)
                </div>
                <div class="form-group">
                    <label asp-for="FechaNacimiento" class="control-label"></label>
                    @Html.TextBoxFor(model => model.FechaNacimiento)
                    @Html.ValidationMessageFor(model => model.FechaNacimiento)
                </div>
                <div class="form-group">
                    <label asp-for="Direccion" class="control-label"></label>
                    @Html.TextBoxFor(model => model.Direccion)
                    @Html.ValidationMessageFor(model => model.Direccion)
                </div>
                <div class="form-group">
                    <label asp-for="Telefono" class="control-label"></label>
                    @Html.TextBoxFor(model => model.Telefono)
                    @Html.ValidationMessageFor(model => model.Telefono)
                </div>
                <div class="form-group">
                    <label asp-for="Foto" class="control-label"></label>
                    @Html.TextBoxFor(model => model.Foto)
                </div>
                <div class="form-group">
                    <label asp-for="IdDepartamento" class="control-label"></label>
                    <select name="IdDepartamento">
                        @foreach (var department in @Model.ListadoDepartamentos)
                        {
                            <option value="@department.Id" selected="@((Model.NombreDepartamento==department.Nombre)?"selected":false)">@department.Nombre</option>
                        }
                    </select>
                    <span asp-validation-for="IdDepartamento" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        @Html.ActionLink("Back to List", "Index", "Personas")
    </div>

    @{
        if (ViewBag.NumeroFilasAfectadas == 1)
        {
            <div><font color="green">Se ha actualizado correctamente</font></div>
        }
        else if (ViewBag.NumeroFilasAfectadas == 0)
        {
            <div><font color="red">No se ha actualizado</font></div>
        }
    }

</body>
</html>
