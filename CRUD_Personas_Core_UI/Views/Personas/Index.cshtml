@model IEnumerable<CRUD_Personas_Core_UI.Models.ClsPersonaNombreApellidosNombreDepartamento>

@{
    ViewData["Title"] = "Index";
}

<h1>Listado de personas</h1>
<p>
    @{
        if (ViewBag.Resultado != null)
        {
            if (ViewBag.Resultado == "Se ha borrado correctamente")
            {
                <div><font color="green">@ViewBag.Resultado</font></div>
            }
            else
            {
                <div><font color="red">@ViewBag.Resultado</font></div>
            }
        }

    }
</p>
@Html.ActionLink("Add Person", "Insert", "Personas")
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellidos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreDepartamento)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Apellidos)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreDepartamento)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
